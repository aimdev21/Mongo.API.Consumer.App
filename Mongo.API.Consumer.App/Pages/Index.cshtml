@page
@model IndexModel
@{
    ViewData["Title"] = "Jokes Home";
}

<div class="container p-3">
    <div>
        <div class="col border-bottom" style="width: 80%">
            <h2 class="display-6"> My Jokes List</h2>
            <p>My favorite Jokes are listed below!</p>
        </div>
    </div>

    <div class="container pt-4">
        <div class="row" style="width: 80%">
            <div class="col">
                @if (TempData["success"] != null)
                {
                    <h4 style="color: green;">@TempData["success"]</h4>
                }
                else
                {
                    <h4 style="color: red;">@TempData["failure"]</h4>
                }
            </div>
            <div class="col text-end pb-4">
                <a asp-page="add" class="btn btn-primary mx-2 text-end" title="">
                    <i class="bi bi-plus-square"></i> &nbsp;Add a Joke!
                </a>
            </div>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width: 80%">
        <thead>
            <tr>
                <th class="text-center">Joke Question</th>
                <th class="text-center">Joke Answer</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.JokeModels)
            {
                <tr>
                    <td width="40%">@obj.jokeQuestion</td>
                    <td width="40%">@obj.jokeAnswer</td>
                    <td width="30%" class="text-center">
                        <div class="w-75 btn-group btn-group-sm" role="group" style="text-align:center">
                            <a asp-page="Edit" asp-route-id="@obj.id" class="btn btn-primary  mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="Delete" asp-route-id="@obj.id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>